<%- include("./layout/head", {title: "Home" })%>
    <%- include("./layout/header")%>
        <%- include("./layout/menu")%>
            <%- include("./layout/slider")%>

                <!--	Feature Product	-->
                <div class="products">
                    <h3>Sản phẩm nổi bật</h3>
                    <div class="product-list card-deck">
                        <%for(featured of featuredProduct){%>
                            <div class="product-item card text-center">
                                <a href="/product/<%=featured.slug%>/<%=featured._id%>"><img src="/static/images/<%=featured.thumbnail%>"></a>
                                <h4><a href="#"><%=featured.name%></a></h4>
                                <p>Giá Bán: <span><%=featured.price%></span></p>
                            </div>
                        <%}%>
                        
                    </div>
                    
                </div>
                <!--	End Feature Product	-->


                <!--	Latest Product	-->
                <div class="products">
                    <h3>Sản phẩm mới</h3>
                    <div class="product-list card-deck">
                        <%for(product of newProduct){%>
                            <div class="product-item card text-center">
                                <a href="/product/<%=product.slug%>/<%=product._id%>"><img src="/static/images/<%=product.thumbnail%>"></a>
                                <h4><a href="#"><%=product.name%></a></h4>
                                <p>Giá Bán: <span><%=product.price%></span></p>
                            </div>
                        <%}%>
                       
                    </div>
                   
                </div>
                <!--	End Latest Product	-->

                <%- include("./layout/sidebar")%>
                    <%- include("./layout/footer")%>